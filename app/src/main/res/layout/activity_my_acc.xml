<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MyAccount.MyAccActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_profile"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/TXT_profile"
                android:layout_width="match_parent"
                android:text="@string/txt_profile"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="@android:color/black"
                android:layout_height="40dp" />
            <View
                android:id="@+id/v_profile"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/colorPrimary"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_MyOrder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TXT_MyOrder"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/txt_myorder"
                android:textColor="@android:color/black" />

            <View
                android:id="@+id/v_MyOrder"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_address"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TXT_address"
                android:layout_width="match_parent"
                android:text="@string/txt_address"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="@android:color/black"
                android:layout_height="40dp" />

            <View
                android:id="@+id/v_address"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:visibility="invisible"
                android:background="@color/colorPrimary"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/acc_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</LinearLayout>